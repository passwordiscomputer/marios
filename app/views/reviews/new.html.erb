<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :rating %>
  <%= f.select :rating, [1, 2, 3, 4, 5], {class: 'dropdown-content'}%>
  <%= f.label "Review" %>
  <%= f.text_field :content_body %>
  <%= f.submit %>
<% end %>
